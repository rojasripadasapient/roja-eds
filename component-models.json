{
  "groups": [
    {
      "title": "Default Content",
      "id": "default",
      "components": [
        {
          "title": "Text",
          "id": "text",
          "plugins": {
            "xwalk": {
              "page": {
                "resourceType": "core/franklin/components/text/v1/text",
                "template": {}
              }
            }
          }
        },
        {
          "title": "Title",
          "id": "title",
          "plugins": {
            "xwalk": {
              "page": {
                "resourceType": "core/franklin/components/title/v1/title",
                "template": {
                  "model": "title"
                }
              }
            }
          }
        },
        {
          "title": "Image",
          "id": "image",
          "plugins": {
            "xwalk": {
              "page": {
                "resourceType": "core/franklin/components/image/v1/image",
                "template": {}
              }
            }
          }
        },
        {
          "title": "Button",
          "id": "button",
          "plugins": {
            "xwalk": {
              "page": {
                "resourceType": "core/franklin/components/button/v1/button",
                "template": {
                  "model": "button"
                }
              }
            }
          }
        }
      ]
    },
    {
      "title": "Sections",
      "id": "sections",
      "components": [
        {
          "title": "Section",
          "id": "section",
          "plugins": {
            "xwalk": {
              "page": {
                "resourceType": "core/franklin/components/section/v1/section",
                "template": {
                  "model": "section"
                }
              }
            }
          }
        }
      ]
    },
    {
      "title": "Blocks",
      "id": "blocks",
      "components": [
        {
          "title": "Cards",
          "id": "cards",
          "plugins": {
            "xwalk": {
              "page": {
                "resourceType": "core/franklin/components/block/v1/block",
                "template": {
                  "name": "Cards",
                  "filter": "cards"
                }
              }
            }
          }
        },
        {
          "title": "Card",
          "id": "card",
          "plugins": {
            "xwalk": {
              "page": {
                "resourceType": "core/franklin/components/block/v1/block/item",
                "template": {
                  "name": "Card",
                  "model": "card"
                }
              }
            }
          }
        },
        {
          "title": "Columns",
          "id": "columns",
          "plugins": {
            "xwalk": {
              "page": {
                "resourceType": "core/franklin/components/columns/v1/columns",
                "template": {
                  "columns": "2",
                  "rows": "1"
                }
              }
            }
          }
        },
        {
          "title": "Fragment",
          "id": "fragment",
          "plugins": {
            "xwalk": {
              "page": {
                "resourceType": "core/franklin/components/block/v1/block",
                "template": {
                  "name": "Fragment",
                  "model": "fragment"
                }
              }
            }
          }
        },
        {
          "title": "Hero",
          "id": "hero",
          "plugins": {
            "xwalk": {
              "page": {
                "resourceType": "core/franklin/components/block/v1/block",
                "template": {
                  "name": "Hero",
                  "model": "hero"
                }
              }
            }
          }
        }
      ]
    },
    {
      "id": "teaser",
      "fields": [
        {
          "component": "text",
          "valueType": "string",
          "name": "blockTitle",
          "label": "Title",
          "value": ""
        }
      ]
    },
    {
      "id": "teaserContent",
      "fields": [
        {
          "component": "text",
          "valueType": "string",
          "name": "teaserName",
          "label": "Teaser Name",
          "multi": false
        },
        {
          "component": "reference",
          "valueType": "string",
          "name": "image",
          "label": "Image",
          "multi": false
        },
        {
          "component": "select",
          "label": "Variation Type",
          "name": "varType",
          "valueType": "string",
          "description": "Select Variation 1 for displaying Heading & Description, and select Variation 2 for displaying Features",
          "options": [
            { "name": "Variation 1", "value": "var1" },
            { "name": "Variation 2", "value": "var2" }
          ]
        },
        {
          "component": "text",
          "valueType": "string",
          "name": "heading",
          "label": "Heading",
          "value": "",
          "condition": { "==": [{ "var": "varType" }, "var1"] }
        },
        {
          "component": "richtext",
          "name": "description",
          "label": "Description",
          "condition": { "==": [{ "var": "varType" }, "var1"] }
        },
        {
          "component": "aem-content",
          "valueType": "string",
          "name": "ctaLink",
          "label": "CTA Link",
          "value": "",
          "condition": { "==": [{ "var": "varType" }, "var1"] }
        },
        {
          "component": "text",
          "valueType": "string",
          "name": "ctaText",
          "label": "CTA Text",
          "value": "",
          "condition": { "==": [{ "var": "varType" }, "var1"] }
        },
        {
          "component": "select",
          "name": "ctaType",
          "label": "CTA Type",
          "options": [
            { "name": "default", "value": "" },
            { "name": "primary", "value": "primary" },
            { "name": "secondary", "value": "secondary" },
            { "name": "tertiary", "value": "tertiary" }
          ],
          "condition": { "==": [{ "var": "varType" }, "var1"] }
        },
        {
          "component": "richtext",
          "name": "usp",
          "value": "",
          "label": "USP",
          "valueType": "string",
          "description": "Add USP and USP-Value as key-value pair",
          "multi": true,
          "condition": { "==": [{ "var": "varType" }, "var2"] }
        },
        {
          "component": "richtext",
          "name": "uspvalue",
          "value": "",
          "label": "USP Value",
          "description": "Add USP and USP-Value as key-value pair",
          "valueType": "string",
          "multi": true,
          "condition": { "==": [{ "var": "varType" }, "var2"] }
        }
      ]
    },
    {
      "title": "Global Section",
      "id": "globalblocksection",
      "components": [
        {
          "title": "Global Block Container",
          "id": "globalblockcontainer",
          "plugins": {
            "xwalk": {
              "page": {
                "resourceType": "core/franklin/components/block/v1/block",
                "template": {
                  "name": "Global Block Container",
                  "filter": "globalblockcontainer"
                }
              }
            }
          }
        },
        {
          "title": "Hero Global",
          "id": "herog",
          "plugins": {
            "xwalk": {
              "page": {
                "resourceType": "core/franklin/components/block/v1/block",
                "template": {
                  "name": "Hero",
                  "model": "herog"
                }
              }
            }
          }
        }
      ]
    }
  ]
}